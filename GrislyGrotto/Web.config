<?xml version="1.0"?>
<configuration>
  <system.web>
    <authentication mode="Windows" />
    <httpHandlers>
      <add path="/Posts/Rss" verb="GET" type="GrislyGrotto.Rss, GrislyGrotto" />
    </httpHandlers>
    <compilation>
      <assemblies>
        <add assembly="System.Data.Entity, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" />
      </assemblies>
    </compilation>
  </system.web>

  <system.webServer>
    <validation validateIntegratedModeConfiguration="false" />
    <handlers>
      <add name="Rss" path="/Posts/Rss" verb="GET" type="GrislyGrotto.Rss, GrislyGrotto" />
    </handlers>
  </system.webServer>

  <system.serviceModel>
    <bindings>
      <webHttpBinding>
        <binding name="ExpandedWebHttpBinding">
          <readerQuotas maxDepth="32" maxStringContentLength="5242880"
            maxArrayLength="16384" maxBytesPerRead="4096" maxNameTableCharCount="16384" />
        </binding>
      </webHttpBinding>
    </bindings>
    <serviceHostingEnvironment aspNetCompatibilityEnabled="true" multipleSiteBindingsEnabled="true" />
    <behaviors>
      <serviceBehaviors>
        <behavior name="GrislyGrotto.BlogBehavior">
          <serviceMetadata httpGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="true" />
        </behavior>
      </serviceBehaviors>
      <endpointBehaviors>
        <behavior name="GrislyGrotto.BlogBehaviour.EndPoint">
          <webHttp />
        </behavior>
      </endpointBehaviors>
    </behaviors>

    <services>
      <service behaviorConfiguration="GrislyGrotto.BlogBehavior" name="GrislyGrotto.Blog">
        <endpoint address="" behaviorConfiguration="GrislyGrotto.BlogBehaviour.EndPoint"
          binding="webHttpBinding" bindingConfiguration="ExpandedWebHttpBinding"
          contract="GrislyGrotto.Blog">
          <identity>
            <dns value="localhost" />
          </identity>
        </endpoint>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
      </service>
    </services>
  </system.serviceModel>

  <system.data>
    <DbProviderFactories>
      <add name="SQL Server Compact Edition 4.0"
      invariant="System.Data.SqlServerCe.4.0"
      description=".NET Framework Data Provider for Microsoft SQL Server Compact Edition 4.0"
      type="System.Data.SqlServerCe.SqlCeProviderFactory, System.Data.SqlServerCe, Version=4.0.0.0, Culture=neutral, PublicKeyToken=89845dcd8080cc91" />
    </DbProviderFactories>
  </system.data>

  <connectionStrings>
    <add name="GrislyGrottoEntities"
      connectionString="metadata=res://*/GrislyGrottoEntities.csdl|res://*/GrislyGrottoEntities.ssdl|res://*/GrislyGrottoEntities.msl;provider=System.Data.SqlServerCe.4.0;provider connection string=&quot;Data Source=|DataDirectory|\GrislyGrotto.sdf&quot;"
      providerName="System.Data.EntityClient" />
  </connectionStrings>
</configuration>